# Server Configuration
PORT=3000
NODE_ENV=production

# JWT Secret - ALTERE PARA UMA CHAVE SEGURA EM PRODUÇÃO!
# Gere uma nova com: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=sua-chave-secreta-super-segura-aqui

# Admin Panel Control
# Set to 'false' in production to disable admin access completely
ADMIN_ENABLED=true

# Admin User Credentials - ALTERE EM PRODUÇÃO!
ADMIN_USERNAME=admin
ADMIN_PASSWORD=senha-super-segura-aqui

# CORS Configuration
# Em produção, defina a URL exata do seu frontend
# Exemplo: https://seuportfolio.com
CORS_ORIGIN=http://localhost:5173

# Rate Limiting (proteção contra ataques)
# Janela de tempo em milissegundos (15 minutos = 900000ms)
RATE_LIMIT_WINDOW_MS=900000
# Máximo de requisições por janela de tempo
RATE_LIMIT_MAX_REQUESTS=100
